#include "socfpga_mitysomcvse.dtsi"
/ {

	soc {
		
		hps_lw_bus: bus@0ff200000 {
			status = "okay";

			sysid_qsys: sysid@000000 {
				compatible = "altr,sysid-1.0";
				reg = <0x000000 0x08>;
			};

			hps_emac_interface_splitter_0: splitter@0x000008 {
				compatible = "altr,emac-splitter-1.0";
				reg = <0x000008 0x00000004>;
				clocks = < &h2f_user0_clk >;
			};
		};

		gmac0: ethernet@ff700000 {
			status = "okay";
			phy-mode = "rgmii";
			phy-handle = <&phy1>;
			snps,max-mtu = <4062>;
			max-speed = <100>;
			altr,emac-splitter = <&hps_emac_interface_splitter_0>;
		};
		

		gmac1: ethernet@ff702000  {
			status = "okay";
			phy-mode = "rgmii";
			phy-handle = <&phy0>;
			snps,max-mtu = <4062>;
			max-speed = <100>;
		};

		mdio1: mdio@ff702000 {
			status = "okay";
				#address-cells = <1>;
				#size-cells = <0>;
				phy0: ethernet-phy@0 {
					reg = <0x2>;
					device_type = "ethernet-phy";
					compatible = "ethernet-phy-ieee802.3-c22";
				};

				phy1: ethernet-phy@1 {
					reg = <0x3>;
					device_type = "ethernet-phy";
					compatible = "ethernet-phy-ieee802.3-c22";
				};
		};

		dwmmc0@ff704000 {
			num-slots = <1>;
			supports-highspeed;
			broken-cd;
			altr,dw-mshc-ciu-div = <3>;
			altr,dw-mshc-sdr-timing = <0 3>;

			slot@0 {
				reg = <0>;
				bus-width = <4>;
			};
		};

		gpio@ff708000 {
			status = "okay";
		};

		gpio@ff709000 {
			status = "okay";
		};

		gpio@ff70a000 {
			status = "okay";
		};

		i2c0: i2c@ffc04000 {
			i2c-sda-hold-time-ns = <500>;
		};

		i2c1: i2c@ffc05000 {
			i2c-sda-hold-time-ns = <500>;
			speed-mode = <0>;
			status = "okay";
		};

		i2c2: i2c@ffc06000 {
			i2c-sda-hold-time-ns = <500>;
			speed-mode = <0>;
			status = "okay";
		};
	};
};
